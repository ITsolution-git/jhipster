<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.isoftnet.jobnect.domain.User" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Authority" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.JobApplication" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Job" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Job.jobApplications" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Address" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Company" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Company.addresses" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.JobStatus" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.Reference" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.JobRating" uses-template="simple"/>

    <cache alias="com.isoftnet.jobnect.domain.LifeCycle" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
